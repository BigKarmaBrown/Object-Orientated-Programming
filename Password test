void UserMainMenu()
{
    int menuInput;
    cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
    cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
    cout << "                                    MAIN MENU                                       " << endl;
    cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
    cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
    cout << "Type Number For Option Below" << endl;
    cout << "1: Browse Books" << endl;
    cout << "2: Manage Own Books" << endl;
    cout << "3: Log Out" << endl;
    if (!(cin >> menuInput)) {
        cout << "Invalid Input" << endl;
        return;
    }
        
    switch (menuInput)
    {
    case 1:
    {
        BrowseBooksMenu();
        break;
    }

    case 2:
    {
        ViewOwnBooksMenu();
        break;
    }

    case 3:
    {
        cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~LOGGING OUT!~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
        loginMenu();
    }

    default:
    {
        cout << "INVALID CHOICE! PLEASE INPUT BETWEEN 1 AND 3! " << endl;
        return;
    }

    }
}

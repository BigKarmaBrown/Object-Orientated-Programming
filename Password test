    void setBooksReserved(bool value)
    {
        booksReserved = value;
    }


    int getlibrarianNumber()
    {
        return librarianNumber;
    }

    string getlibrarianName()
    {
        return librarianName;
    }

    int getbooksBorrowed()
    {
        return booksBorrowed;
    }

    bool getBookReserved()
    {
        return booksReserved;
    }


    Librarian(string name, int number, int borrowed, bool reserved) { 
        librarianName = name;
        librarianNumber = number;
        booksBorrowed = borrowed;
        booksReserved = reserved;
    }

private:

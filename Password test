void loginMenu() {
    int password;

    do {
        (password = 1234);
        cout << "What is the passkey? " << endl;
        cin >> password;
        if (password < 0 || password >= 10000)
        {
            cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~PASS KEY GUESS INVALID~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
        }
        else if (password == 1234)
        {
            cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~CONGRATULATIONS YOU SMART COOKIE~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
        }
        else
            cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~PASS KEY INCORRECT~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;


    } while (password != 1234);

   

}     

void passkeyLogin() {

    int passkey;
    do {

        cout << "What is the passkey? " << endl;
        cout << "(type '0' to go back) " << endl;
        cin >> passkey;
        if (passkey < 0 || passkey >= 10000)
        {
            cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ PASS KEY GUESS INVALID ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
        }
        else if (passkey == 1234)
        {
            cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ CONGRATULATIONS, ACCESS GRANTED ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
            UserMainMenu();
        }
        else if (passkey == 0)
        {
            cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ BACK TO MAIN MENU ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
            loginMenu();
        }
        else
            cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ PASS KEY INCORRECT ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
        return;

    } while (passkey != 1234);
    
}

void usernameLogin() {
    string passname;
    do {

        cout << "What is the Users Name? " << endl;
        cout << "(Type 'Back' for Main Menu)" << endl;
        cin >> passname;
        if (passname != "Ollie" && passname != "Cam" && passname != "Ethan")
        {
            cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ USER NAME INVALID ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
            return;
        }
        else if (passname == "Ollie" || passname == "Cam" || passname == "Ethan")
        {
            cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~USER NAME CORRECT ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
            passkeyLogin();
        }

        else
            cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ NAME INCORRECT ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
        

    } while (passname == "Back");
    loginMenu();

}




User createUser(string userName, int userNumber, int userPasskey, bool reserved)
{
    User newUser(userName, userNumber, userPasskey, reserved);
    return newUser;

}




